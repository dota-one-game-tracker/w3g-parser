---
BasedOnStyle: LLVM
Language: Cpp

# 80-col classic
ColumnLimit: 80

# Old-school tabs
UseTab: Always
TabWidth: 8
IndentWidth: 8
ContinuationIndentWidth: 8

# K&R braces
BreakBeforeBraces: Attach

# Control statements spacing (typical K&R-ish)
SpaceBeforeParens: ControlStatements
SpacesInParentheses: false
SpaceInEmptyParentheses: false

# Parameters / arguments formatting
BinPackParameters: false
BinPackArguments: false

# If params wrap, put ')' on its own line (for declarations/definitions)
AlignAfterOpenBracket: BlockIndent
AllowAllParametersOfDeclarationOnNextLine: false

# Keep single-line things reasonable
AllowShortIfStatementsOnASingleLine: Never
AllowShortLoopsOnASingleLine: false
AllowShortFunctionsOnASingleLine: Inline

# Pointer style (common in K&R-ish C/C++)
DerivePointerAlignment: false
PointerAlignment: Left
